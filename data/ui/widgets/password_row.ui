<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  
  <template class="PasswordRow" parent="AdwActionRow">
    <property name="title-lines">1</property>
    <property name="subtitle-lines">1</property>
    
    <!-- Password avatar -->
    <child type="prefix">
      <object class="AdwAvatar" id="password_avatar">
        <property name="size">32</property>
        <property name="icon-name">dialog-password-symbolic</property>
      </object>
    </child>
    
    <!-- Action button -->
    <child type="suffix">
      <object class="GtkButton" id="action_button">
        <property name="icon-name">go-next-symbolic</property>
        <property name="tooltip-text">View Details</property>
        <property name="valign">center</property>
        <style>
          <class name="flat"/>
        </style>
      </object>
    </child>
  </template>
</interface>
