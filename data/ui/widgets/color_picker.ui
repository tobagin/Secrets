<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  
  <template class="ColorPicker" parent="AdwBin">
    <property name="child">
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="yes">Color</property>
        <property name="description" translatable="yes">Choose a color for this item</property>
        
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Available Colors</property>
            <property name="child">
              <object class="GtkFlowBox" id="color_flow_box">
                <property name="selection-mode">none</property>
                <property name="homogeneous">true</property>
                <property name="max-children-per-line">8</property>
                <property name="min-children-per-line">4</property>
                <property name="row-spacing">8</property>
                <property name="column-spacing">8</property>
                <property name="margin-top">12</property>
                <property name="margin-bottom">12</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
              </object>
            </property>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
